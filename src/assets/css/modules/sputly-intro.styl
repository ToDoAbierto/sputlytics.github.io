.sputly-intro
  display block
  width 125%
  height 120vh
  text-align center
  background-color #000
  background-image url(../images/bg-earth.jpg)
  background-position 0 -100px
  background-repeat no-repeat
  background-size cover
  float left

  .welcome
    position absolute
    top 200px
    left 0
    width 100%
    font-size 1.5em
    z-index 2

  .getstarted
    border 4px solid #FEFEFE
    border-radius 20px
    position relative
    padding 15px
    top 50px
    font-size 1.1em

@media (max-width: 1200px)
  .sputly-intro
    width 100%
    height 100vh
    background-position 0 0
    .welcome
      font-size 1em


@media (min-width: 481px) and (max-width: 960px)
  .sputly-intro
    width 100%
    height 100vh
    background-position 0 -70px
    .welcome
      font-size 1em

@media (min-width: 320px) and (max-width: 480px)
  .sputly-intro
    width 100%
    height 80vh
    background-position 0 -100px
    .welcome
      top 100px
      font-size 0.8em

/* iPhone 5 & 5S in landscape */
@media only screen and (device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2)
  .sputly-intro
    width 100%
    height 80vh
    background-position 0 -70px
    .welcome
      top 100px
      font-size 0.8em
