.sputly-subscribe
  h2
    font-weight 800
  form
    margin 0 auto
    display block
    text-align center

  input
    width 480px
    height 40px
    line-height 40px
    font-size 1.3em
    padding-left 10px

  button
    color #333
    font-size 1.3em
    height 41px

@media (min-width: 481px) and (max-width: 960px)
  .sputly-subscribe
    h2
      font-size 1em
    input
      width 400px

@media (min-width: 320px) and (max-width: 480px)
  .sputly-subscribe
    h2
      font-size 0.85em
    input
      width 250px
