.sputly-subscribe
  padding 30px 0
  h2
    font-weight 800
  form
    margin 0 auto
    display block
    text-align center

  input
    width 450px
    height 40px
    line-height 40px
    font-size 1.3em
    padding-left 10px
    color #333

@media (min-width: 481px) and (max-width: 960px)
  .sputly-subscribe
    h2
      font-size 1em
    input
      width 380px

@media (min-width: 320px) and (max-width: 480px)
  .sputly-subscribe
    h2
      font-size 0.85em
    input
      width 220px
