@import 'nib'

$fontBaseLight = 'ubuntulight', Arial;
$colorBaseBody = #757a83

.clearfix
  clearfix()

body
  font-family $fontBaseLight
  font-smoothing(antialiased)
  font-size 1em
  color $colorBaseBody
  background #181818
  width 100%
  height 100%
  
.fade-in-page
  animation fade-in ease-in 2s both

@keyframes fade-in {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}
  
.forkgit
  position absolute
  top 0
  right 0

li
  list-style none
  
h1
  margin 0 auto
  width 253px
  
h2
  text-align center
  font-size 1.063em
  text-transform uppercase
  
.sputly-intro, .sputly-team
  position relative
  padding-bottom 63%
  width 100%
  height 100%
  height 100vh
  display block

.sputly-intro
  background #000 url(../images/bg_stars.png) center center no-repeat
  background-size cover

.sputly--welcome
  position absolute
  top 30%
  left 50%
  width 54%
  height 32%
  margin-left -27%
  z-index 2
  
.sputly--twinkling
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
  display block
  background transparent url(../images/twinkling.png) repeat left
  animation move-twink-back 200s linear infinite
  width 40%
  height 50%
  z-index 1

@keyframes move-twink-back {
  from {background-position: 0 0; }
  to {background-position:-10000px 5000px;}
}

